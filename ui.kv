<MenuScreen@Screen>:
    name: "menu"
    _app: app
    canvas:
#        Color:
#            rgba: 255, 0, 0, 1
        Rectangle:
#            pos: self.pos
            size: self.size
            source: 'data/logo.png'


    BoxLayout:
        orientation: 'vertical'
        size: self.size

        Button:
            text: "Авторизация"
            on_release: app.screen_manager.current = 'entry'
            size_hint_y: None
            height: dp(40)
#            width: dp(40)
#            padding: 20,20

        Button:
            text: "Внутренняя память"
            on_release: app.screen_manager.current = 'user_data'
            size_hint_y: None
            height: dp(40)

        Label:
#            text: 'My label'
#            color: 255, 0, 255, 1
#            size_hint_y: None


<Entry>:
    name: "entry"
    _app: app

    BoxLayout:
        orientation: 'vertical'

        Button:
            text: '< Выход'
            on_press: app.screen_manager.current = 'menu'
            size_hint_y: None
            height: dp(40)

        TextInput:
            id: field_phone
            multiline: False
            input_type: 'number'
            height: dp(40)
            size_hint_y: None
            hint_text: "Введите телефон 380...."

        Button:
            text: "Проверить телефон"
            size_hint_y: None
            height: dp(40)
            on_press:
                if field_phone.text != '': root.button_clicked()#; \
        ProgressBar:
            id: download_progress_bar
            max: 1
            value: 0

        Label:
            id: phone_label

        Label:
            id: result_label

<EntryPincode>:
    name: "entry_pincode"
    _app: app

    BoxLayout:
        orientation: 'vertical'

        Button:
            text: '< Выход'
            on_press: app.screen_manager.current = 'menu'
            size_hint_y: None
            height: dp(40)

        TextInput:
            id: field_phone
            input_type: 'number'
            multiline: False
            height: dp(40)
            size_hint_y: None
            hint_text: "Введите пинкод"

        Button:
            text: "Проверить пинкод"
            size_hint_y: None
            height: dp(40)
            on_press:
                print('epc1====== result =Button')
                if field_phone.text != '': root.button_clicked()
        ProgressBar:
            id: download_progress_bar
            max: 1
            value: 0

        Label:
            id: phone_label

        Label:
            id: result_label


<ShowUserData>:
    name: "user_data"

    BoxLayout:
        orientation: 'vertical'

        Button:
            text: '< Назад'
            on_press: app.screen_manager.current = 'menu'
            size_hint_y: None
            height: dp(40)

        RecycleView:
            id: rv
            key_viewclass: 'viewclass'
            key_size: 'height'

            RecycleBoxLayout:
                default_size: None, dp(40)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'


